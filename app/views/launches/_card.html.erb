<div class="card mb-3">
  <h2 class="card-header h4">
    Launch #<%= launch.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Context</dt>
      <dd><%= launch.context_id %></dd>

      <dt>Resource</dt>
      <dd><%= launch.resource_id %></dd>

      <dt>Enrollment</dt>
      <dd><%= launch.enrollment_id %></dd>

      <dt>User</dt>
      <dd><%= launch.user_id %></dd>

      <dt>Tool consumer</dt>
      <dd><%= launch.tool_consumer_id %></dd>

      <dt>Payload</dt>
      <dd><%= launch.payload %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back launch, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_launch_url(launch), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to launch, method: :delete, data: { confirm: "Do you really want to delete this launch?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(launch.updated_at) %> ago
  </div>
</div>
