<tr>
  <td>
    <%= context.title %>
  </td>

  <td>
    <%= context.id_from_tc %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to context, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_context_url(context), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to context, method: :delete, data: { confirm: "Do you really want to delete this context?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
