<% was_validated = enrollment.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(enrollment, html: form_html_options) do |f| %>
  <div class="form-group">
    <% roles_class = "form-control" %>
    <% roles_was_invalid = enrollment.errors.include?(:roles) %>

    <% if was_validated %>
      <% if roles_was_invalid %>
        <% roles_class << " is-invalid" %>
      <% else %>
        <% roles_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :roles %>

    <%= f.text_field :roles, class: roles_class, placeholder: "Enter roles" %>
    <% if roles_was_invalid %>
      <% enrollment.errors.full_messages_for(:roles).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% context_id_class = "form-control" %>
    <% context_id_was_invalid = enrollment.errors.include?(:context_id) %>

    <% if was_validated %>
      <% if context_id_was_invalid %>
        <% context_id_class << " is-invalid" %>
      <% else %>
        <% context_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :context_id %>

    <%= f.text_field :context_id, class: context_id_class, placeholder: "Enter context" %>
    <% if context_id_was_invalid %>
      <% enrollment.errors.full_messages_for(:context_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% user_id_class = "form-control" %>
    <% user_id_was_invalid = enrollment.errors.include?(:user_id) %>

    <% if was_validated %>
      <% if user_id_was_invalid %>
        <% user_id_class << " is-invalid" %>
      <% else %>
        <% user_id_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>

    <%= f.text_field :user_id, class: user_id_class, placeholder: "Enter user" %>
    <% if user_id_was_invalid %>
      <% enrollment.errors.full_messages_for(:user_id).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
