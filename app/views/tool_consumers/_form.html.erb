<% was_validated = tool_consumer.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(tool_consumer, html: form_html_options) do |f| %>
  <div class="form-group">
    <% instance_guid_class = "form-control" %>
    <% instance_guid_was_invalid = tool_consumer.errors.include?(:instance_guid) %>

    <% if was_validated %>
      <% if instance_guid_was_invalid %>
        <% instance_guid_class << " is-invalid" %>
      <% else %>
        <% instance_guid_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :instance_guid %>

    <%= f.text_field :instance_guid, class: instance_guid_class, placeholder: "Enter instance guid" %>
    <% if instance_guid_was_invalid %>
      <% tool_consumer.errors.full_messages_for(:instance_guid).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% instance_name_class = "form-control" %>
    <% instance_name_was_invalid = tool_consumer.errors.include?(:instance_name) %>

    <% if was_validated %>
