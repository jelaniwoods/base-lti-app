    <%= f.label :instance_url %>

    <%= f.text_field :instance_url, class: instance_url_class, placeholder: "Enter instance url" %>
    <% if instance_url_was_invalid %>
      <% tool_consumer.errors.full_messages_for(:instance_url).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% instance_contact_email_class = "form-control" %>
    <% instance_contact_email_was_invalid = tool_consumer.errors.include?(:instance_contact_email) %>

    <% if was_validated %>
      <% if instance_contact_email_was_invalid %>
        <% instance_contact_email_class << " is-invalid" %>
      <% else %>
        <% instance_contact_email_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :instance_contact_email %>

    <%= f.text_field :instance_contact_email, class: instance_contact_email_class, placeholder: "Enter instance contact email" %>
    <% if instance_contact_email_was_invalid %>
      <% tool_consumer.errors.full_messages_for(:instance_contact_email).each do |message| %>
