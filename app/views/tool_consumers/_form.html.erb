    <% if instance_name_was_invalid %>
      <% tool_consumer.errors.full_messages_for(:instance_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% instance_description_class = "form-control" %>
