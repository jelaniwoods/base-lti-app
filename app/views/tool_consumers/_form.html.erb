    <% if was_validated %>
      <% if instance_description_was_invalid %>
        <% instance_description_class << " is-invalid" %>
      <% else %>
        <% instance_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :instance_description %>

    <%= f.text_field :instance_description, class: instance_description_class, placeholder: "Enter instance description" %>
    <% if instance_description_was_invalid %>
      <% tool_consumer.errors.full_messages_for(:instance_description).each do |message| %>
        <div class="invalid-feedback d-flex">
