<tr>
  <td>
    <%= submission.enrollment_id %>
  </td>

  <td>
    <%= submission.resource_id %>
  </td>

  <td>
    <%= submission.score %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to submission, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_submission_url(submission), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to submission, method: :delete, data: { confirm: "Do you really want to delete this submission?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
